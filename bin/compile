#!/usr/bin/env bash

build_pack_path=$(cd $(dirname $(dirname $0)); pwd)

# Ensure dirs are present
mkdir -p $1 $2 $3

build_path=$(cd $1 && pwd)
cache_path=$(cd $2 && pwd)
env_path=$(cd $3 && pwd)

function export_env_vars() {
  whitelist_regex=${2:-''}
  blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
  if [ -d "$env_path" ]; then
    output_section "Will export the following config vars:"
    for e in $(ls $env_path); do
      echo "$e" | grep -E "$whitelist_regex" | grep -vE "$blacklist_regex" &&
      export "$e=$(cat $env_path/$e)"
      :
    done
  fi
}

export_env_vars
echo "-----> Setting AppSignal Deploy Marker at revision $(git rev-parse HEAD) for $APPSIGNAL_APP_NAME ($APPSIGNAL_APP_ENV)"
curl -G -X POST -d "{\"revision\":\"$(git rev-parse HEAD)\",\"repository\":\"master\",\"user\":\"Gigalixir\"}" --data-urlencode "name=$APPSIGNAL_APP_NAME" --data-urlencode "environment=$APPSIGNAL_APP_ENV" "https://push.appsignal.com/1/markers?api_key=$APPSIGNAL_PUSH_API_KEY
